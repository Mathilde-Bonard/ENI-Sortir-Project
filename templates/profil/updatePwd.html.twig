{% extends 'base.html.twig' %}

{#{% form_theme userUpdateForm 'views/form/Form-template.html.twig' %}#}

{% block body %}

    <main class="w-full pt-15">
        <section>
            <div class="p-3 pt-8 bg-[#f1edeb] rounded-xl text-neutral-800 shadow-xl">
                <h1 class="text-xl font-medium text-neutral-900 mb-3">Modification du mot de passe</h1>

                {% form_theme pwdUpdateForm 'views/form/form-theme-update.html.twig' %}

                <div class="w-full text-sm">
                    {{ form_start(pwdUpdateForm) }}
                    {{ form_widget(pwdUpdateForm) }}
                    {{ form_end(pwdUpdateForm) }}
                </div>
                <a class="flex justify-center transition w-full font-semibold text-neutral-800 border-2 bg-red-300 pt-2 pb-1.5 mt-1 rounded-full text-sm" href="{{ path('app_profil_details', { 'id' : app.user.id }) }}">

                    Annuler
                </a>
            </div>
        </section>
    </main>
{% endblock %}

{% block title %}
    Modification du mot de passe
{% endblock %}