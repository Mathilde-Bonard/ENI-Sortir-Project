<div class="w-full sortie_listener">
    <section class="overflow-hidden">
        <div class="w-full relative rounded-t-xl overflow-hidden">
            <img src="{{ asset('/img/sortie/pexels-harrisonhaines-3536274.jpg') }}" alt=""
                 class="aspect-5/3 object-cover">
            <div class="absolute top-0 left-0 p-3 bg-neutral-800/30 h-full w-full"></div>
        </div>
    </section>

    <section class="relative mt-[-20px] z-2 overflow-hidden sortie {{ sortie.etat | lower }} {{ app.user in sortie.participants ? 'inscrit' : '' }}">

        <div class="rounded-t-xl sortie__container">
            <div class="p-3 pt-5">
                <div class="flex items-start gap-3 mb-5">
                    <h1 class="font-medium text-3xl me-auto">{{ sortie.nom }}</h1>
                    <div class="flex items-center gap-2">
                        <div class="flex ms-auto items-center gap-2 text-neutral-200">
                            {% if is_granted('SORTIE_EDIT', sortie) %}
                                <a href="{{ path('sortie_update', {'id': sortie.id}) }}"
                                   class="bg-neutral-800 p-1.5 rounded-full">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                                         class="size-3">
                                        <path d="M21.731 2.269a2.625 2.625 0 0 0-3.712 0l-1.157 1.157 3.712 3.712 1.157-1.157a2.625 2.625 0 0 0 0-3.712ZM19.513 8.199l-3.712-3.712-12.15 12.15a5.25 5.25 0 0 0-1.32 2.214l-.8 2.685a.75.75 0 0 0 .933.933l2.685-.8a5.25 5.25 0 0 0 2.214-1.32L19.513 8.2Z"></path>
                                    </svg>

                                </a>
                            {% endif %}
                            {% if is_granted('SORTIE_CANCEL', sortie) %}
                                <a href="{{ path('sortie_cancel', {id: sortie.id}) }}"
                                   class="bg-neutral-800 p-1 rounded-full">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                         class="size-4">
                                        <path d="M6.28 5.22a.75.75 0 0 0-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 1 0 1.06 1.06L10 11.06l3.72 3.72a.75.75 0 1 0 1.06-1.06L11.06 10l3.72-3.72a.75.75 0 0 0-1.06-1.06L10 8.94 6.28 5.22Z"></path>
                                    </svg>
                                </a>
                            {% endif %}
                        </div>
                        <div class="font-semibold px-3 py-1.5 pb-1 rounded-full text-xs sortie__btn whitespace-nowrap">
                            #{{ sortie.etat | capitalize }}
                        </div>
                    </div>

                </div>
                <div class="w-full flex flex-col mb-5 text-sm sortie-info">
                    <div class=" flex gap-1 items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5m-9-6h.008v.008H12v-.008ZM12 15h.008v.008H12V15Zm0 2.25h.008v.008H12v-.008ZM9.75 15h.008v.008H9.75V15Zm0 2.25h.008v.008H9.75v-.008ZM7.5 15h.008v.008H7.5V15Zm0 2.25h.008v.008H7.5v-.008Zm6.75-4.5h.008v.008h-.008v-.008Zm0 2.25h.008v.008h-.008V15Zm0 2.25h.008v.008h-.008v-.008Zm2.25-4.5h.008v.008H16.5v-.008Zm0 2.25h.008v.008H16.5V15Z"></path>
                        </svg>
                        <span class="mt-1">{{ sortie.dateHeureDebut | date('F d Y • g a') }}</span>
                    </div>
                    <div class="flex gap-1 items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M9 6.75V15m6-6v8.25m.503 3.498 4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 0 0-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0Z"></path>
                        </svg>
                        <span class="mt-1">{{ sortie.lieu }}, {{ sortie.lieu.ville }}</span>
                    </div>
                    <div class="flex gap-1 items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"></path>
                        </svg>
                        <span class="mt-1">{{ sortie.duree }} heure(s)</span>
                    </div>
                </div>
                <div class="info mb-5">
                    {% if sortie.etat == "ANNULEE" %}
                        <h3 class="font-semibold mb-2">Raison de l'annulation</h3>

                    {% else %}
                        <h3 class="font-semibold mb-2">A propos</h3>
                    {% endif %}
                    <p class="text-sm">{{ sortie.infosSortie }}</p>
                </div>
                <div class="orga mb-5 w-fit">
                    <h3 class="font-semibold mb-2">Organisateur</h3>
                    <a href="{{ path('app_profil_details', { 'id' : sortie.organisateur.id }) }}" class="w-fit">
                        <div class="orga flex items-center">
                            <div class="me-2">
                                <img src="{{ asset("/img/user/" ~ sortie.organisateur.imageFileName ) }}" alt="placeholder"
                                     class="rounded-full w-11 h-11">
                            </div>
                            <div>
                                <p class="font-semibold text-sm">{{ sortie.organisateur }}</p>
                                <div class="flex opacity-80 items-center text-xs">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                         stroke-width="1.5" stroke="currentColor" class="size-4">
                                        <path stroke-linecap="round" stroke-linejoin="round"
                                              d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round"
                                              d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z"></path>
                                    </svg>
                                    <span class="pt-0.5">Campus {{ app.user.campus | capitalize }}</span></div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="participants mb-5">
                    <div class="flex items-center mb-2 gap-2">
                        <h3 class="font-medium">{{ sortie.participants | length }} Participant(s)</h3>
                        {% if is_granted('SORTIE_READ_PARTICIPANTS', sortie) %}
                            <div class="flex gap-2 items center text-sm">
                                <span>•</span>
                                <span data-target="user_list" class="cursor-pointer hover:opacity-100 toggle__collapse  opacity-70 hover:opacity-100 transition">voir la liste</span>
                            </div>
                        {% endif %}
                    </div>
                    <div class="flex items-center ms-[-2px]">
                        <div class="flex *:me-[-20px] relative">
                            {% for participant in sortie.participants[:3] %}
                                <div class="rounded-full">
                                    <img src="{{ asset('/img/user/' ~ participant.imageFileName) }}"
                                         alt="placeholder"
                                         class="participant-img rounded-full border-2 w-11 h-11 border-[#f0f0e6]">
                                </div>
                            {% else %}
                                <span class="text-sm opacity-80">Aucune inscriptions recencées</span>
                            {% endfor %}
                        </div>
                        {% if (sortie.participants | length) >= 4 %}
                            {% if is_granted('SORTIE_READ_PARTICIPANTS', sortie) %}
                                <div data-target="user_list" class="transition cursor-pointer toggle__collapse hover:bg-neutral-600 bg-neutral-800 border-2 border-[#f0f0e6] h-11 w-11 rounded-full text-[#f0f0e6] flex items-center justify-center z-5">
                                    <span class="text-sm font-medium mt-1">+{{ (sortie.participants | length) - 3 }}</span>
                                </div>
                            {% else %}
                                <div class="bg-neutral-800 border-2 border-[#f0f0e6] h-11 w-11 rounded-full text-[#f0f0e6] flex items-center justify-center z-5">
                                    <span class="text-sm font-medium mt-1">+{{ (sortie.participants | length) - 3 }}</span>
                                </div>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="relative border-t-2 border-dashed sortie__btn w-full">
                <div class="absolute w-full flex">
                    <div class="aspect-square w-6 bg-neutral-800 rounded-full -translate-x-3 -translate-y-3.5"></div>
                    <div class="aspect-square w-6 bg-neutral-800 rounded-full ms-auto translate-x-3 -translate-y-3.5"></div>
                </div>
                <div class="font-bold py-7 uppercase text-2xl text-center sortie__btn">
                    {% if sortie.etat == "INSC_OUVERTE" %}
                        {% if app.user == sortie.organisateur %}
                            <div class="flex-none pe-5 ms-7 py-1.5 pb-0.5 rounded-full">
                                Inscription en cours
                            </div>
                        {% else %}
                            {% if is_granted('SORTIE_UNSUBSCRIBE', sortie) %}
                                <div class="sub_btn flex-none pe-5 ms-7 py-1.5 pb-0.5 rounded-full cursor-pointer"
                                     data-url="{{ path('sortie_unsub', {id: sortie.id}) }}">
                                    Se désinscrire
                                </div>
                            {% elseif is_granted('SORTIE_SUBSCRIBE', sortie) %}
                                <div class="sub_btn flex-none pe-5 ms-7 py-1.5 pb-0.5 rounded-full cursor-pointer"
                                     data-url="{{ path('sortie_sub', {id: sortie.id}) }}">
                                    S'inscrire
                                </div>
                            {% endif %}
                        {% endif %}
                    {% elseif  sortie.etat == "INSC_CLOTUREE" %}
                        <div class="flex-none pe-5 ms-7 py-1.5 pb-0.5 rounded-full">
                            Clôturée
                        </div>
                    {% elseif  sortie.etat == "ANNULEE" %}
                        <div class="flex-none pe-5 ms-7 py-1.5 pb-0.5 rounded-full">
                            Annulée
                        </div>
                    {% elseif  sortie.etat == "ACTIVITE_EN_COURS" %}
                        <div class="flex-none pe-5 ms-7 py-1.5 pb-0.5 rounded-full">
                            En cours
                        </div>
                    {% elseif  sortie.etat == "CREEE" %}
                        {% if app.user == sortie.organisateur %}
                            <div class="flex-none pe-5 ms-7 py-1.5 pb-0.5 rounded-full">
                                Publier
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
{%TODO src image -> user_image%}

        {% include 'views/offcanvas/_offcanvas-users.html.twig' with {sortie : sortie} %}

    </section>
</div>
